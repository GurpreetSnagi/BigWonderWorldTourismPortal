<%- include('layoutLoggedIn.ejs'); %>
<div class="col-md-6 offset-md-3 card mt-5">
    <form method="post" action="/create-car">
        <div class="form-group mt-5">
          <label for="car-title">Car Name</label>
          <input type="text" class="form-control" id="job-title" name="title" placeholder="Enter car name" required>
        </div>
        <div class="form-group">
            <label for="company-title">Make</label>
            <input type="text" class="form-control" id="companyName" name="city" placeholder="Car Maker" required>
          </div>
        <div class="form-group">
          <label for="car-type">Car Type</label>
          <select class="form-control" id="job-type" name="type">
            <option>Sedan</option>
            <option>Hatchback</option>
            <option>SUV</option>      
          </select>
        </div>
        <div class="form-group">
            <label for="car-price">Price</label>
            <input type="text" class="form-control" id="job-salary" name="price" placeholder="Enter Price">
          </div>
       

        <button type="submit" class="btn btn-primary loginButton">Submit</button>
      </form>
      <div class="mt-3"></div>

    </div>
    <div class="mt-5"></div>
    <div class="mt-5"></div>

</body>
</html>