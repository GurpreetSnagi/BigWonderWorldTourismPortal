<%- include('layoutLoggedIn.ejs'); %>
<div class="col-md-6 offset-md-3 card mt-5">
    <form method="post" action="/create-hotel">
        <div class="form-group mt-5">
          <label for="hotel-title">Hotel Name</label>
          <input type="text" class="form-control" id="job-title" name="title" placeholder="Enter hotel name" required>
        </div>
        <div class="form-group">
            <label for="job-title">City Name</label>
            <input type="text" class="form-control" id="companyName" name="city" placeholder="City Name" required>
          </div>
        <div class="form-group">
          <label for="job-description">Room Description</label>
          <textarea class="form-control" id="job-description" rows="6" name="description" placeholder="Enter Room description" required></textarea>
        </div>
        <div class="form-group">
          <label for="job-location">Hotel Country</label>
          <input type="text" class="form-control" id="job-location" name="country" placeholder="Enter Hotel Country" required>
        </div>
        <div class="form-group">
          <label for="job-type">Room Type</label>
          <select class="form-control" id="job-type" name="type">
            <option>Single</option>
            <option>Double</option>
            <option>Premium</option>      
          </select>
        </div>
        <div class="form-group">
          <label for="job-salary">Price</label>
          <input type="text" class="form-control" id="job-salary" name="price" placeholder="Enter Price">
        </div>

        <button type="submit" class="btn btn-primary loginButton">Submit</button>
      </form>
      <div class="mt-3"></div>

    </div>
    <div class="mt-5"></div>
    <div class="mt-5"></div>

</body>
</html>